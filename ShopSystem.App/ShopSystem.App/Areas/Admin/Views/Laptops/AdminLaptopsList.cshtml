@model IEnumerable<ShopSystem.Models.ViewModels.Admin.AdminLaptopsVm>
@{
    ViewBag.Title = "Laptops";
}

<h1>Admin Panel</h1>

<hr>
<h2>Laptops / @Html.ActionLink("Add Laptop", "Add", "Laptop", new { @class = "link"})</h2>

<div class="container">
    <div class="row">
        @foreach (var vm in Model)
        {

            <div class="col-sm-3" id="laptops">
                @{
                    var base64 = Convert.ToBase64String(vm.Image1);
                    var imgsrc = string.Format("data:image/gif;base64, {0}", base64);
                }
                <img id="picture" src="@imgsrc">
                <br>
                @Html.DisplayNameFor(laptopVm => laptopVm.ModelName):
                @Html.DisplayFor(vms => vm.ModelName)
                <br>
                @Html.DisplayNameFor(laptopVm => laptopVm.Price):
                @Html.DisplayFor(vms => vm.Price)
                <br>
                @Html.ActionLink("Edit", "Edit", "Laptops", new { id = vm.Id }, new { @class = "btn btn-primary"})
                @Html.ActionLink("Delete", "Delete", "Laptops", new { id = vm.Id }, new { @class = "btn btn-danger"})
                <br>
            </div>
        }
    </div>
</div>
@Html.ActionLink("Back", "Action", "Admin", new { area = "" }, new { @class = "btn btn-lg btn-primary" })

